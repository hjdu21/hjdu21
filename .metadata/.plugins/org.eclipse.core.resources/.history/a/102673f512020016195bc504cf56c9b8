<?xml version="1.0" encoding="UTF-8"?>
<!-- DTD를 다른 XML파일에서도 사용할 수 있도록 별도의 파일로 분리한다.
-->
   
<!DOCTYPE books [
 <!ENTITY pre "출판사">
 <!ENTITY % cattr "CDATA #REQUIRED">
 
 <!ELEMENT books (press+,book*)>
 <!ELEMENT book (press,price,author*,)>
 <!ATTLIST book
 	title CDATA #REQUIRED
 	content CDATA #IMPLIED
 	location (local|foreign) "local"
 	type CDATA #FIXED "paper"
  	press CDATA #REQUIRED
 	
 >
 <!ELEMENT press (#PCDATA)>
 <!ELEMENT price (#PCDATA)>
 <!ELEMENT author (#PCDATA)>
]>

<books>
  <book title="자바 프로그래밍" content="자바 기초 문법서이다" type="paper">

  <press>비트&pre; &cattr;</press> <!-- 엔티티 사용법 => &엔티티명; -->
  
  <price>32000</price>
  <author>홍길동</author>
    </book>
    
  <book title="자바 프로그래밍2" location="foreign">
  <press>비트출판사</press>
  <price>32000</price>
  <author>홍길동</author>
  <author>임꺽정</author>
    </book>
    
</books>